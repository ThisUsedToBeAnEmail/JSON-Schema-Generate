{
   "$schema" : "http://json-schema.org/draft-07/schema#",
   "$id" : "https://metacpan.org/author.json",
   "title" : "The CPAN Author Schema",
   "description" : "A representation of a cpan author.",
   "type" : "object",
   "required" : [
      "name",
      "gravatar_url",
      "other",
      "website",
      "release_count",
      "links",
      "email",
      "pauseid",
      "asciiname",
      "is_pause_custodial_account"
   ],
   "properties" : {
      "asciiname" : {
         "type" : "string"
      },
      "city" : {
         "type" : "string"
      },
      "country" : {
         "type" : "string"
      },
      "email" : {
         "type" : [
            "array",
            "string"
         ],
         "items" : {
            "type" : "string"
         }
      },
      "gravatar_url" : {
         "type" : "string"
      },
      "is_pause_custodial_account" : {
         "type" : "boolean"
      },
      "links" : {
         "type" : "object",
         "required" : [
            "backpan_directory",
            "cpantesters_reports",
            "cpan_directory",
            "metacpan_explorer",
            "cpants",
            "cpantesters_matrix"
         ],
         "properties" : {
            "backpan_directory" : {
               "type" : "string"
            },
            "cpan_directory" : {
               "type" : "string"
            },
            "cpantesters_matrix" : {
               "type" : "string"
            },
            "cpantesters_reports" : {
               "type" : "string"
            },
            "cpants" : {
               "type" : "string"
            },
            "metacpan_explorer" : {
               "type" : "string"
            }
         }
      },
      "name" : {
         "type" : "string"
      },
      "other" : {
         "type" : "array",
         "items" : {
            "type" : [
               "boolean",
               "null",
               "string",
               "integer"
            ]
         }
      },
      "pauseid" : {
         "type" : "string"
      },
      "region" : {
         "type" : "string"
      },
      "release_count" : {
         "type" : "object",
         "required" : [
            "cpan",
            "backpan-only",
            "latest"
         ],
         "properties" : {
            "backpan-only" : {
               "type" : "integer"
            },
            "cpan" : {
               "type" : "integer"
            },
            "latest" : {
               "type" : "integer"
            }
         }
      },
      "updated" : {
         "type" : "string"
      },
      "website" : {
         "type" : "array",
         "items" : {
            "type" : "string"
         }
      }
   }
}
